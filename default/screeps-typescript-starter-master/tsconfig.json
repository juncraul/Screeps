{
  "compilerOptions": {
    "module": "esnext",
    "lib": [ "esnext" ],
    "target": "es2017",
    "moduleResolution": "Node",
    "outDir": "distTest",
    "baseUrl": "src/",
    "sourceMap": true,
    "strict": true,
    "experimentalDecorators": true,
    "noImplicitReturns": true,
    "allowSyntheticDefaultImports": true,
    "allowUnreachableCode": false,
    "forceConsistentCasingInFileNames": true,
    "noUnusedLocals": true
  },
  "exclude": [
    "node_modules"
  ]
}
